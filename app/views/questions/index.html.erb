<% provide(:title, 'Otázky - ' + @current_topic.topic_name) %>

<div class="row">

  <div class="col-md-9 my_content">
    <h3><strong>Otázky na tému <%= @current_topic.topic_name %></strong></h3>
    <% @question.each do |q| %>
        <h3><%= link_to q.question_name, q %></h3>
        <%= link_to "Edituj otázku", edit_question_path(q) %>
        <%= link_to "Vymaž otázku", q, method: :delete, data: { confirm: 'Ste si istý, že chcete vymazať otázku?' }  %>
    <% end %>
  </div>

</div>