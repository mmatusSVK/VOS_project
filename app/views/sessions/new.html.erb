<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :login_name %>
        <%= f.email_field :login_name, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Prihlásiť sa", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "TODO", '#' %></p> #TODO
  </div>
</div>
